<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.chatlocalybusiness.textview.TextViewReguler
        android:id="@+id/tv_otpverifyLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_businessicon"
        android:layout_marginTop="@dimen/dimen20"
        android:textSize="@dimen/textsize16"
        android:textColor="@color/light_gray"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen20"
        />
    <com.chatlocalybusiness.ui.CircleImageView
        android:id="@+id/iv_businessIcon"
        android:layout_width="@dimen/dimen80"
        android:layout_height="@dimen/dimen80"
        android:src="@drawable/rs_icon"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginTop="@dimen/dimen10"  />

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.chatlocalybusiness.textview.TextViewReguler
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_businessName"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/light_gray"
            android:layout_marginTop="20dp" />
        <ImageView
            android:layout_width="@dimen/dimen10"
            android:layout_height="@dimen/dimen10"
            android:src="@drawable/star"
            android:layout_marginTop="20dp"   />
    </LinearLayout>

    <EditText
        android:id="@+id/et_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen10"
        android:hint="@string/str_enterbusinessname"
        android:textColorHint="@color/light_gray"
        android:paddingLeft="@dimen/dimen10"
        android:theme="@style/EditTextTheme"
        android:textSize="@dimen/textsize16"
        android:textColor="@color/black"
        android:inputType="textCapWords"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.chatlocalybusiness.textview.TextViewReguler
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_homeservice"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/light_gray"
            android:layout_marginTop="20dp" />
        <ImageView
            android:layout_width="@dimen/dimen10"
            android:layout_height="@dimen/dimen10"
            android:src="@drawable/star"
            android:layout_toRightOf="@+id/tv_businessCat"
            android:layout_marginTop="20dp"   />

        <com.chatlocalybusiness.textview.TextViewReguler
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_kilometers"
            android:layout_marginLeft="40dp"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/light_gray"
            android:layout_marginTop="20dp" />
        <ImageView
            android:id="@+id/iv_star_km"
            android:layout_width="@dimen/dimen10"
            android:layout_height="@dimen/dimen10"
            android:src="@drawable/star_gray"
            android:layout_toRightOf="@+id/tv_businessCat"
            android:layout_marginTop="20dp"   />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <EditText
        android:id="@+id/et_homeService"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen10"
        android:hint="Select"
        android:textColorHint="@color/light_gray"
        android:paddingLeft="@dimen/dimen10"
        android:theme="@style/EditTextTheme"
        android:textSize="@dimen/textsize16"
        android:textColor="@color/black"
        android:focusable="false"
        />

    <EditText
        android:id="@+id/et_kilometers"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen10"
        android:hint="Type"
        android:textColorHint="@color/light_gray"
        android:paddingLeft="@dimen/dimen10"
        android:theme="@style/EditTextTheme"
        android:textSize="@dimen/textsize16"
        android:textColor="@color/black"
        android:enabled="false"
        android:inputType="number"
        android:maxLength="2"
        />
   </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:text="*max 99 km"
        android:textSize="10sp"
        android:paddingRight="@dimen/dimen10"

        />
    <Button
        android:id="@+id/btn_done"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/str_done"
        android:background="@color/grey"
        android:textColor="@color/light_gray"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen20"
        android:clickable="false"
        android:focusable="false"
        />
</LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
    </RelativeLayout>