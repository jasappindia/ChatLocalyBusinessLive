    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen10"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"
        >

        <TextView
            android:id="@+id/tv_productName"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="Olive Oil"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/lightblack"
            android:textSize="@dimen/textsize16"
            android:padding="@dimen/dimen5"
            android:maxLines="2"
            />
        <ImageView
            android:id="@+id/iv_prodImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_below="@+id/tv_productName"
            />
        <TextView
            android:id="@+id/tv_prodiscount"
            android:layout_width="@dimen/dimen60"
            android:layout_height="@dimen/dimen25"
            android:background="@drawable/tag"
            android:text="51 % off"
            android:textSize="@dimen/textsize12"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen5"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_productName"
            />
        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen20"
            android:gravity="center"
            android:layout_below="@+id/iv_prodImage"
            >
            <TextView
                android:id="@+id/tv_proPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 1,346"
                android:textSize="@dimen/textsize14"
                android:textColor="@color/light_gray"
                />
            <TextView
                android:id="@+id/tv_oldValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/textsize12"
                android:layout_marginLeft="@dimen/dimen5"
                android:layout_marginTop="@dimen/dimen2"

                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen5"
            android:textSize="@dimen/textsize16"
            android:visibility="gone"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_opacityUnpublished"
        android:layout_width="140dp"
        android:layout_height="240dp"
        android:background="#6ccacaca"
        android:visibility="gone"
        />
</RelativeLayout>