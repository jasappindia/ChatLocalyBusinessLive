<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/tv_alertHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10"
        android:text="@string/str_addProductAlert"
        android:gravity="center"
        android:textSize="@dimen/textsize18"
        android:textColor="@color/black"
        />

     <CheckBox
         android:id="@+id/cb_dontShow"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Don't show again"
         android:layout_marginTop="@dimen/dimen20"
         android:layout_marginLeft="@dimen/dimen15"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_addNow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Now"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/white"
            android:background="@color/themeColor"
            android:gravity="center"
            android:padding="@dimen/dimen5"
            android:layout_margin="@dimen/dimen20"
            />
        <TextView
            android:id="@+id/tv_later"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Later"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/lightblack"
            android:background="@color/light_grey"
            android:gravity="center"
            android:padding="@dimen/dimen5"
            android:layout_margin="@dimen/dimen20"
            />

    </LinearLayout>

</LinearLayout>