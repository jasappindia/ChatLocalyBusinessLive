<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_locLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <com.chatlocalybusiness.textview.TextViewReguler
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_country"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/light_gray"
                android:layout_marginTop="20dp" />

            <com.chatlocalybusiness.textview.TextViewReguler
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_city"
                android:layout_marginLeft="50dp"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/light_gray"
                android:layout_marginTop="20dp" />

            <ImageView
                android:layout_width="@dimen/dimen10"
                android:layout_height="@dimen/dimen10"
                android:src="@drawable/star"
                android:layout_toRightOf="@+id/tv_businessCat"
                android:layout_marginTop="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_country"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen10"
                android:text="India"
                android:textColorHint="@color/light_gray"
                android:paddingLeft="@dimen/dimen10"
                android:theme="@style/EditTextTheme"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/black"
                android:focusable="false"
                android:longClickable="false"
                android:clickable="false" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen15"
                android:textColorHint="@color/light_gray"
                android:hint="@string/str_select"
                android:paddingLeft="@dimen/dimen10"
                android:theme="@style/EditTextTheme"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/black"
                android:focusable="false"
                android:longClickable="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <com.chatlocalybusiness.textview.TextViewReguler
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_pincode"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/light_gray"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/iv_pinStar"
                android:layout_width="@dimen/dimen10"
                android:layout_height="@dimen/dimen10"
                android:src="@drawable/star"
                android:layout_toRightOf="@+id/tv_businessCat"
                android:layout_marginTop="20dp"
                android:visibility="invisible" />

            <com.chatlocalybusiness.textview.TextViewReguler
                android:id="@+id/tv_locality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_localtiy"
                android:layout_marginLeft="35dp"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/light_gray"
                android:layout_marginTop="20dp"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/iv_localityStar"
                android:layout_width="@dimen/dimen10"
                android:layout_height="@dimen/dimen10"
                android:src="@drawable/star"
                android:layout_toRightOf="@+id/tv_businessCat"
                android:layout_marginTop="20dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_pincode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen15"
                android:hint="@string/str_type"
                android:textColorHint="@color/light_gray"
                android:paddingLeft="@dimen/dimen10"
                android:theme="@style/EditTextTheme"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/black"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:enabled="false" />

            <EditText
                android:id="@+id/et_locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen10"
                android:hint="@string/str_select"
                android:textColorHint="@color/light_gray"
                android:paddingLeft="@dimen/dimen10"
                android:theme="@style/EditTextTheme"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/black"
                android:maxLines="1"
                android:enabled="false"
                android:focusable="false"
                android:clickable="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <com.chatlocalybusiness.textview.TextViewReguler
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_Address"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/light_gray"
                android:layout_marginTop="20dp"
                android:id="@+id/textViewReguler2" />

            <ImageView
                android:id="@+id/iv_addressStar"
                android:layout_width="@dimen/dimen10"
                android:layout_height="@dimen/dimen10"
                android:src="@drawable/star"
                android:layout_toRightOf="@+id/tv_businessCat"
                android:layout_marginTop="20dp"
                android:visibility="gone" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen10"
            android:hint="@string/str_type"
            android:textColorHint="@color/light_gray"
            android:paddingLeft="@dimen/dimen10"
            android:theme="@style/EditTextTheme"
            android:textSize="@dimen/textsize16"
            android:textColor="@color/black"
            android:maxLines="2"
            android:enabled="false"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <com.chatlocalybusiness.textview.TextViewReguler
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_landmark"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/textsize16"
                android:textColor="@color/light_gray"
                android:layout_marginTop="20dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen10"
            android:hint="@string/str_type"
            android:textColorHint="@color/light_gray"
            android:paddingLeft="@dimen/dimen10"
            android:theme="@style/EditTextTheme"
            android:textSize="@dimen/textsize16"
            android:maxLines="2"
            android:textColor="@color/black"
            android:enabled="false"

            />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/str_done"
            android:background="@drawable/gray_btn_bg"
            android:textColor="@color/light_gray"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen20"
            android:focusable="false" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>