<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GST"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize18"
        android:padding="@dimen/dimen10"
        android:background="@color/themeColor"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_cgst"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
            android:layout_marginRight="@dimen/dimen5"
            android:layout_weight="1"
            android:hint="CGST" />

        <EditText
            android:id="@+id/et_sgst"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
            android:layout_marginLeft="@dimen/dimen5"
            android:layout_weight="1"
            android:hint="SGST" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen20"
        android:background="@drawable/promo_bg"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/tax_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:background="@drawable/tax_circle"
                android:gravity="center"
                android:padding="@dimen/dimen10"
                android:textColor="@color/lightblack"
                />
            <TextView
                android:id="@+id/tax_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="5"
                android:background="@drawable/tax_circle"
                android:gravity="center"
                android:padding="@dimen/dimen10"
                android:layout_marginLeft="@dimen/dimen10"
                android:textColor="@color/lightblack"
                />
            <TextView
                android:id="@+id/tax_12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="12"
                android:background="@drawable/tax_circle"
                android:gravity="center"
                android:padding="@dimen/dimen10"
                android:layout_marginLeft="@dimen/dimen10"
                android:textColor="@color/lightblack"
                />
            <TextView
                android:id="@+id/tax_18"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="18"
                android:background="@drawable/tax_circle"
                android:gravity="center"
                android:padding="@dimen/dimen10"
                android:layout_marginLeft="@dimen/dimen10"
                android:textColor="@color/lightblack"
                />
            <TextView
                android:id="@+id/tax_28"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="28"
                android:background="@drawable/tax_circle"
                android:gravity="center"
                android:padding="@dimen/dimen10"
                android:layout_marginLeft="@dimen/dimen10"
                android:textColor="@color/lightblack"
                />


        </LinearLayout>


    </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_tax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen10"
            >
            <RadioButton
               android:id="@+id/rb_inclusive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inclusive"
                />
            <RadioButton
                android:id="@+id/rb_exclusive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exclusive"
               android:layout_marginLeft="@dimen/dimen30"
                />
        </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen10">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
             android:layout_margin="@dimen/dimen10"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
           android:text="CANCEL"
           android:gravity="center"
            android:textColor="@color/white"
             android:background="@color/themeColor"
            />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
            android:layout_margin="@dimen/dimen10"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:text="OK"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/themeColor"
            />

    </LinearLayout>

</LinearLayout>